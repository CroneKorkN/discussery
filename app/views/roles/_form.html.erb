<%= form_for(@role) do |f| %>
  <% if @role.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@role.errors.count, "error") %> prohibited this role from being saved:</h2>

      <ul>
      <% @role.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  
  <% PermissionType.all.each do |permission_type| %>
      <%= check_box_tag :permission_type_ids, permission_type.id, @role.permission_types.include?(permission_type), name: 'role[permission_type_ids][]' %>
      <%= label_tag :permission_type_ids, "#{permission_type.action}" %><br>
  <% end %>
  
  <div class="actions">
    <br><%= f.submit %>
  </div>
<% end %>
